<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Ticket</title>
    <link rel="stylesheet" href="/css/ticket.css">
</head>

<body>

    <form action="/add" method="POST">
        <h2>Thông tin vé</h2>
        <label for="id_ve">ID Vé:</label>
        <input type="text" id="id_ve" name="id_ve"><br>

        <label for="id_chuyen_tau">Chuyến Tàu:</label>
        <select id="id_chuyen_tau" name="id_chuyen_tau">
            <% chuyentau.forEach(chuyentauItem=> { %>
                <option value="<%= chuyentauItem.id_chuyen_tau %>">
                    <%= chuyentauItem.id_chuyen_tau %> - <%= chuyentauItem.ga_tau.join(' - ') %>
                </option>
            <% }); %>
        </select>
        

        <label for="id_nhan_vien">Nhân viên:</label>
        <select id="id_nhan_vien" name="id_nhan_vien">
            <% nhanvien.forEach(nhanvienItem=> { %>
                <option value="<%= nhanvienItem.id_nhan_vien %>">
                    <%= nhanvienItem.ten_nhan_vien %>
                </option>
                <% }); %>
        </select>

        <label for="gia_ve">Giá vé:</label>
        <input type="number" id="gia_ve" name="gia_ve"><br>

        <label for="id_ghe">ID Ghế:</label>
        <input type="text" id="id_ghe" name="id_ghe"><br>

        <!-- <label for="id_tru_so">ID Trụ sở:</label> -->
        <input type="hidden" id="id_tru_so" name="id_tru_so" value="<%= idtruso %> "><br>

        <h2>Thông tin khách hàng</h2>

        <label for="cccd">CCCD</label>
        <input type="text" id="cccd" name="cccd"><br>

        <label for="ten_khach_hang">Tên khách hàng</label>
        <input type="text" id="ten_khach_hang" name="ten_khach_hang"><br>

        <label for="sdt">Số điện thoại</label>
        <input type="text" id="sdt" name="sdt"><br>

        <label for="email">Email</label>
        <input type="text" id="email" name="email"><br>

        <input type="submit" value="Thêm vé">
    </form>
</body>

</html>